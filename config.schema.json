{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "definitions": {
    "Recording": {
      "additionalProperties": false,
      "properties": {
        "department": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "number": {
          "type": "string"
        },
        "semester": {
          "enum": [
            "autumn",
            "spring"
          ],
          "type": "string"
        },
        "year": {
          "type": "string"
        }
      },
      "required": [
        "department",
        "year",
        "semester",
        "number",
        "name"
      ],
      "type": "object"
    },
    "ScheduleType": {
      "enum": [
        "weekly",
        "once"
      ],
      "type": "string"
    },
    "Stream": {
      "additionalProperties": false,
      "properties": {
        "detail": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "when": {
          "$ref": "#/definitions/When"
        },
        "where": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "items": {
                "type": "string"
              },
              "type": "array"
            }
          ]
        }
      },
      "required": [
        "when",
        "where",
        "name"
      ],
      "type": "object"
    },
    "Timeframe": {
      "additionalProperties": false,
      "properties": {
        "from": {
          "type": "string"
        },
        "timezone": {
          "type": "string"
        },
        "to": {
          "type": "string"
        }
      },
      "required": [
        "timezone",
        "from",
        "to"
      ],
      "type": "object"
    },
    "When": {
      "additionalProperties": false,
      "properties": {
        "schedule": {
          "$ref": "#/definitions/ScheduleType"
        },
        "timeframe": {
          "$ref": "#/definitions/Timeframe"
        }
      },
      "required": [
        "schedule",
        "timeframe"
      ],
      "type": "object"
    }
  },
  "properties": {
    "$schema": {
      "type": "string"
    },
    "cache_location": {
      "type": [
        "string",
        "null"
      ]
    },
    "recordings": {
      "items": {
        "$ref": "#/definitions/Recording"
      },
      "type": "array"
    },
    "streams": {
      "items": {
        "$ref": "#/definitions/Stream"
      },
      "type": "array"
    }
  },
  "required": [
    "$schema",
    "cache_location",
    "streams",
    "recordings"
  ],
  "type": "object"
}
